          <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance" />

    <Button
        android:id="@+id/distanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Get Distance" />

    <SeekBar
        android:id="@+id/greenBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/redBar"
        android:layout_below="@+id/textView2"
        android:max="255" />

    <SeekBar
        android:id="@+id/servoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blueBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:max="150"
        android:progress="90" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/servoBar"
        android:layout_alignLeft="@+id/blueBar"
        android:text="Servo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/greenBar"
        android:layout_below="@+id/redBar"
        android:layout_marginTop="15dp"
        android:text="Green" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blueBar"
        android:layout_below="@+id/greenBar"
        android:layout_marginTop="15dp"
        android:text="Blue" />

    <SeekBar
        android:id="@+id/blueBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/greenBar"
        android:layout_below="@+id/textView3"
        android:max="255" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/redBar"
        android:layout_below="@+id/distanceButton"
        android:layout_marginTop="47dp"
        android:text="Red" />

    <SeekBar
        android:id="@+id/redBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/distanceButton"
        android:layout_below="@+id/textView1"
        android:max="255" />

    <TextView
        android:id="@+id/distanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView6"
        android:layout_toLeftOf="@+id/distanceButton"
        android:maxLines="1"
        android:text="0in, 0cm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp" />
      
</RelativeLayout>